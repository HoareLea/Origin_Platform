    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^10.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.6",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
