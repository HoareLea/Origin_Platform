    "@graphql-tools/load-files": "^6.5.2",
    "@graphql-tools/merge": "^8.2.1",
    "@neo4j/graphql": "^2.4.0",
    "apollo-server": "^3.4.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "apollo-server-lambda": "^3.4.0",
    "convert-units": "^2.3.4",
    "core-js": "^3.19.1",
    "csv-parse": "^4.10.1",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "graphql": "^15.7.2",
